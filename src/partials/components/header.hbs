<header class="page-header">
    <div class="container">
        <div class="page-header__row">
            <a href="#" class="page-header__logo">
                <div class="page-header__logo-content">
                    {{> logo }}
                </div>

            </a>
            <div class="page-header__about-text">
                <p>
                    Блог бригмана про компьютерное железо
                </p>
            </div>

            <div class="page-header__links">
                <a href="#" class="page-header__link">
                    О нас
                </a>
                <a href="#" class="page-header__link">
                    Контакты
                </a>
            </div>
            <div class="page-header__theme-toggles">
                <button class="page-header__theme-toggle-btn page-header__theme-toggle-btn--light">
                    <svg width="14" height="14" aria-hidden="true" class="icon-light-theme">
                        <use xlink:href="#light-theme"></use>
                    </svg>
                </button>
                <div class="page-header__theme-tumbler">

                </div>
                <button class="page-header__theme-toggle-btn page-header__theme-toggle-btn--dark">
                    <svg width="14" height="14" aria-hidden="true" class="icon-dark-theme">
                        <use xlink:href="#dark-theme"></use>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</header>